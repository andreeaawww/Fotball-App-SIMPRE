<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursValutar.ContactPage"
             xmlns:charts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             Title="Project Team">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Team that worked on this project" HorizontalOptions="CenterAndExpand"  VerticalOptions="CenterAndExpand" FontSize="Large"/>
            <ListView>
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Posirca Andreea</x:String>
                        <x:String>Soare Diana</x:String>
                        <x:String>Traistaru Lucian</x:String>
                        <x:String>Sfetcu Silviu</x:String>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>
            <Label Text="See the project code on GitHub" HorizontalOptions="CenterAndExpand"  VerticalOptions="CenterAndExpand" FontSize="Large"/>
            <Button Text="Open GitHub"  VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" 
                    Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursValutar.AboutPage"
             Title="Fotball Application">
    <ContentPage.Content>
        <StackLayout>
        <StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand">
            <Image x:Name="teamBadge"
                                       Source="https://img.posterlounge.co.uk/img/products/50000/43826/43826_poster_l.jpg"
                                       HorizontalOptions="CenterAndExpand"
                                       Aspect="AspectFill"/>
        </StackLayout>
            <Label Text=" Countries | Leagues | Teams | More"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Large"/>
            <Label Text="Project PDM - 2020 SIMPRE " TextColor="Black" FontSize="Large"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>